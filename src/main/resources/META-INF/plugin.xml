<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>cn.aixcyi.plugin.TinySnake</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Tiny Snake</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="75880483+aixcyi@users.noreply.github.com" url="https://www.yourcompany.com">aixcyi</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
<p>A tiny PyCharm plugin for me.</p>
<p>一个 PyCharm 小插件，用于提升自己的 Python 开发体验。</p>
<h2>功能</h2>
<table>
    <thead>
        <tr>
            <th>功能</th>
            <th>键位</th>
            <th>菜单</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>重构 dict</td>
            <td><code>Ctrl</code> <code>Alt</code> <code>D</code></td>
            <td>(右键) -> 重构 -> dict 转换</td>
        </tr>
        <tr>
            <td>优化 __all__</td>
            <td><code>Ctrl</code> <code>Shift</code> <code>D</code></td>
            <td>代码 -> 优化 __all__</td>
        </tr>
        <tr>
            <td>生成 __all__</td>
            <td>-</td>
            <td>(右键) -> 生成... -> __all__</td>
        </tr>
        <tr>
            <td>在 docstring 中插入超链接</td>
            <td><code>Alt</code> <code>L</code></td>
            <td>(右键) -> 生成... -> 超链接</td>
        </tr>
        <tr>
            <td>生成 Shebang 行</td>
            <td>-</td>
            <td>(右键) -> 生成... -> Shebang 行</td>
        </tr>
    </tbody>
</table>
<h2>Features</h2>
<table>
    <thead>
        <tr>
            <th>Features</th>
            <th>Keyboard</th>
            <th>Menu Location</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Convert dict</td>
            <td><code>Ctrl</code> <code>Alt</code> <code>D</code></td>
            <td>(Right Click) -> Refactor -> dict conversion</td>
        </tr>
        <tr>
            <td>Optimize __all__</td>
            <td><code>Ctrl</code> <code>Shift</code> <code>D</code></td>
            <td>Code -> Optimize __all__</td>
        </tr>
        <tr>
            <td>Generate __all__</td>
            <td>-</td>
            <td>(Right Click) -> Generate... -> __all__</td>
        </tr>
        <tr>
            <td>Insert Link into Docstring</td>
            <td><code>Alt</code> <code>L</code></td>
            <td>(Right Click) -> Generate... -> Link</td>
        </tr>
        <tr>
            <td>Generate Shebang Line</td>
            <td>-</td>
            <td>(Right Click) -> Generate... -> Shebang Line</td>
        </tr>
    </tbody>
</table>
]]></description>

    <resource-bundle>messages.TinySnakeBundle</resource-bundle>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="cn.aixcyi.plugin.tinysnake.service.DunderAllOptimizationService"/>
    </extensions>

    <!-- text 中的下划线被转义了，所以需要双双下划线来表示双下划线 -->
    <actions resource-bundle="messages.TinySnakeBundle">

        <!-- CodeFormatGroup -->
        <action id="OptimizeDunderAll"
                class="cn.aixcyi.plugin.tinysnake.action.OptimizeDunderAllAction">
            <add-to-group group-id="CodeFormatGroup" anchor="after" relative-to-action="OptimizeImports"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift D"/>
        </action>

        <!-- GenerateGroup -->
        <action id="GenerateDunderAll"
                class="cn.aixcyi.plugin.tinysnake.action.GenerateDunderAllAction">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
        </action>
        <action id="GenerateShebang"
                class="cn.aixcyi.plugin.tinysnake.action.GenerateShebangAction">
            <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="GenerateDunderAll"/>
        </action>
        <action id="GenerateDocstringLink"
                class="cn.aixcyi.plugin.tinysnake.action.GenerateDocstringLinkAction">
            <add-to-group group-id="GenerateGroup" anchor="after" relative-to-action="GenerateShebang"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt L"/>
        </action>

        <!-- RefactoringMenu -->
        <action id="ConvertDictCall"
                class="cn.aixcyi.plugin.tinysnake.action.ConvertDictCallAction">
            <add-to-group group-id="RefactoringMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
        </action>

    </actions>
</idea-plugin>
